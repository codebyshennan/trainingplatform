<script>
  document.addEventListener("DOMContentLoaded", function () {
    const resetFields = () => {
      const fields = document.getElementsByTagName('input')
      for (let index = 0; index < fields.length; index++) {
        fields[index].value = '';
      }
      templatecontainer.innerHTML = '';
      timetaken.innerText="--:--:--";
    }

    var calendarEl = document.getElementById("calendar");
    var calendar = new FullCalendar.Calendar(calendarEl, {
      themeSystem: "bootstrap",
      headerToolbar: {
        left: "prev,next today",
        center: "title",
        right: "dayGridMonth,timeGridWeek,listMonth",
      },
      eventDisplay: 'auto',
      initialView: "dayGridMonth",
      navlinks: true, // can click day/week names to navigate views
      selectable: true,
      editable: true, // determines if the event can be dragged or resized
      dayMaxEvents: true, // allow 'more' link when too many events
      longPressDelay: 1000,
      
      events: [
        <% data.trainingdata.forEach((event) => { %>
        // populate this list from ejs
        {
          id: <%= event.id %>,
          title: "<%= event.title %>",
          start: "<%= event.datetime%>",
          color: new Date('<%= event.date%>') > new Date() ? 'grey': '',
          textColor: 'black',
          editable: true,
          // backgroundColor: 'red',
          // borderColor: 'white',
          extendedProps: {
            description: "<%= event.description%>",
            activitytype : "<%= event.activitytype%>",
            perceivedexertion: "<%= event.perceivedexertion %>",
            distance : "<%= event.distance%>",
            calories : "<%= event.calories%>",
            timetaken : "<%= event.timetaken%>",
            minpace : "<%= event.minpace %>",
            avgpace : "<%= event.avgpace %>",
            maxpace : "<%= event.maxpace %>",
            minhr : "<%= event.minhr %>",
            avghr : "<%= event.avghr %>",
            maxhr : "<%= event.maxhr %>",
            feeling: "<%= event.feeling %>",
            createdon : "<%=event.createdon%>",
            createdby: "<%=event.createdby%>"
          }
        },
        <% }) %>
      ],
      eventTimeFormat: { // like '14:30:00'
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        meridiem: false
      },
      eventClick: (info) => {
        console.log('event >> ', info)
        const modalTitle = document.getElementById('infoModalTitle');
        modalTitle.innerText = info.event.title;

        const modalBody = document.getElementById('infoModalBody');
        infoactivitylist.value = info.event.extendedProps.activitytype;
        toggleImg(infoactivitylist.value);

        infoperceivedexertion.value = info.event.extendedProps.perceivedexertion;
        infodatecontainer.value = info.event.start;
        infofeelingvalue.value = info.event.extendedProps.feeling
        infoavgpace.value = info.event.extendedProps.avgpace
        infoavghr.value = info.event.extendedProps.avghr
        infominpace.value = info.event.extendedProps.minpace
        infomaxpace.value = info.event.extendedProps.maxpace
        infominhr.value = info.event.extendedProps.minhr
        infomaxhr.value = info.event.extendedProps.maxhr
        infoactualdistance.value = info.event.extendedProps.distance;
        infoactualtimetaken.value = info.event.extendedProps.timetaken;
        infoactualcalories.value = info.event.extendedProps.calories;
        infodescription.value = info.event.extendedProps.description;
        infoModalTitle.value = info.event.title;

        const infoModal = new bootstrap.Modal(document.getElementById('infoModal'));
        infoModal.toggle();

      },
      select: (info) => {
        console.log('info >> ', info)
        // modalTitle.innerText = info.event.title;
        // modalBody.innerText = info.event.description;
        var newModal = new bootstrap.Modal(document.getElementById('makeNewModal'));
        resetFields();
        datecontainer.value = info.startStr;
        startdate.placeholder = new Date(info.start).toString().substr(0,15)
        newModal.toggle();
      },
      eventDrop: (info) => {

        // route used to query an update to the db every drag and drop
        axios({
            method: 'post',
            headers: {
              'Content-Type': 'application/json',
            },
            url: '/athlete/<%=data.index%>/schedule',
            data: {
              id: `${info.event.id}`,
              datetime: `${info.event.start.toISOString()}`,
              title: `${info.event.title}`
            }
          }).then((response)=> {console.log(response)});
        console.log(info);
        // if (!confirm("Are you sure about this change?")) {
        //   info.revert();
        // }
      }
    });
    calendar.render();
  });
</script>

