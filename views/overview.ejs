<%- include('header-coach', {index: `${data.index}`, title: `${data.title}`})
-%>

<link rel="stylesheet" href="/static/overview.css" />
<link
  href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700"
  rel="stylesheet"
  type="text/css"
/>

<div class="container-fluid">
  <div class="row">
    <% JSON.parse(data.athletedata).forEach(athlete => { %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <div class="tile">
        <div class="wrapper">
          <div class="header"><%= athlete.fName %> <%= athlete.lname %></div>

          <div class="banner-img">
            <img
              src="http://via.placeholder.com/640x360"
              class="img-thumbnail"
              alt="Image 1"
            />
          </div>

          <div class="dates">
            <div class="start">
              <strong>COACHED BY</strong> <%=
              JSON.parse(data.coachdata)[0].fname %>
              <span></span>
            </div>
            <div class="ends">
              <strong> JOIN DATE</strong> <%= athlete.createdon %>
            </div>
          </div>

          <div class="stats">
            <div><strong>INVITED</strong> 3098</div>

            <div><strong>JOINED</strong> 562</div>

            <div><strong>DECLINED</strong> 182</div>
          </div>

          <div class="stats">
            <div><strong>INVITED</strong> 3098</div>

            <div><strong>JOINED</strong> 562</div>

            <div><strong>DECLINED</strong> 182</div>
          </div>

          <div class="stats">
            <div><strong>INVITED</strong> 3098</div>

            <div><strong>JOINED</strong> 562</div>

            <div><strong>DECLINED</strong> 182</div>
          </div>

          <div class="footer">
            <a href="#" class="Cbtn Cbtn-primary">View</a>
            <a href="#" class="Cbtn Cbtn-danger">Delete</a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
