{
  "name": "@sports-alliance/sports-lib",
  "version": "5.4.22",
  "description": "A Library to for importing / exporting and processing GPX, TCX, FIT and JSON files from services such as Strava, Movescount, Garmin, Polar etc",
  "keywords": [
    "gpx",
    "tcx",
    "fit",
    "activities",
    "json",
    "suunto",
    "garmin",
    "polar",
    "export",
    "import",
    "reader",
    "library",
    "utility",
    "parser"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "generate:docs": "npm run build && typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint:fix": "node ./node_modules/tslint/bin/tslint -c ./tslint.json ./**/*.ts --fix",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prettier:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sports-alliance/sports-lib.git"
  },
  "bugs": {
    "url": "https://github.com/sports-alliance/sports-lib/issues"
  },
  "homepage": "https://github.com/sports-alliance/sports-lib/",
  "author": "Sports-Alliance",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@types/node": "^14.6.1",
    "fast-xml-parser": "^3.17.4",
    "fit-file-parser": "^1.9.0",
    "geolib": "^3.3.1",
    "gpx-builder": "^3.6.0",
    "kalmanjs": "^1.1.0",
    "lowpassf": "^0.5.0",
    "moving-median": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/xmldom": "^0.1.30",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2",
    "xmldom": "^0.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
